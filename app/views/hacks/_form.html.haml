= simple_form_for @hack, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :authors
    = f.input :url

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'Cancel', hacks_path, :class => 'btn'
