= simple_form_for @hack, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :placeholder => "What's it called?"
    = f.input :description, :as => :text, :input_html => {:rows => 6}, :label => 'Description (markdown)'
    = f.input :authors, :placeholder => "Who built it? (full names please)"
    = f.input :url, :placeholder => "Optional but awesome"

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'Cancel', hacks_path, :class => 'btn'
